<%= form_for([@tool, @tool_dependency], builder: ApplicationFormBuilder) do |f| %>
    <%= f.error_block %>

    <%= f.collection_select :dependency_id, Tool.where.not(id: @tool.id), :id, :name %>
    <%= f.text_area  :note %>

    <% if f.record.new_record? -%>
        <%= f.buttons cancel: @tool %>
    <% else -%>
        <%= f.buttons cancel: @tool %>
    <% end -%>
<% end %>
