<%= form_for([@tool, @tool_technology], builder: ApplicationFormBuilder) do |f| %>
    <%= f.error_block %>

    <%= f.collection_select :technology, CodeValue.where(code_table: 'technology'), :code, :print_name %>
    <%= f.text_field :tech_version, label: 'Version' %>
    <%= f.text_area  :note %>

    <% if f.record.new_record? -%>
        <%= f.buttons cancel: @tool %>
    <% else -%>
        <%= f.buttons cancel: @tool %>
    <% end -%>
<% end %>
