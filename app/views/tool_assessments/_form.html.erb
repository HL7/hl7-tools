<%= form_for([@tool, @tool_assessment], builder: ApplicationFormBuilder) do |f| %>
    <%= f.error_block %>

    <%= f.hidden_field :assessment_date %>
    <%= f.range_field :risk, in: 0..100, step: 5 %>
    <%= f.range_field :quality, in: 0..100, step: 5 %>
    <%= f.range_field :sustainability, in: 0..100, step: 5 %>
    <%= f.range_field :usability, in: 0..100, step: 5 %>
    <%= f.text_area  :note %>

    <% if f.record.new_record? -%>
        <%= f.buttons cancel: @tool %>
    <% else -%>
        <%= f.buttons cancel: @tool %>
    <% end -%>
<% end %>
